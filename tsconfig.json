{
  "compilerOptions": {
    "composite": true,
    "target": "ES2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@venok/common": ["./packages/common"],
      "@venok/common/*": ["./packages/common/*"],
      "@venok/core": ["./packages/core"],
      "@venok/core/*": ["./packages/core/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "./packages/common"
    },
    {
      "path": "./packages/core"
    }
  ]
}
