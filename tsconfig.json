{
  "compilerOptions": {
    "composite": true,
    "target": "ES2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@venok/core": ["./packages/core"],
      "@venok/core/*": ["./packages/core/*"],
      "@venok/http": ["./packages/http"],
      "@venok/http/*": ["./packages/http/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "./packages/http"
    },
    {
      "path": "./packages/core"
    }
  ]
}
